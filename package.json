{
  "name": "@vocdoni/sdk",
  "author": "Vocdoni",
  "version": "0.0.1-alpha",
  "description": "⚒️An SDK for building applications on top of Vocdoni API",
  "repository": "https://github.com/vocdoni/vocdoni-sdk.git",
  "license": "AGPL-3.0-or-later",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": {
        "default": "./dist/index.browser.js"
      },
      "default": {
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "voting",
    "blockchain",
    "vocdoni"
  ],
  "scripts": {
    "clean": "rimraf node_modules dist",
    "start": "ts-node esbuild.ts --watch",
    "submodule": "git submodule update --init && yarn --cwd src/dvote-protobuf/",
    "prebuild": "yarn submodule",
    "build": "rimraf dist && ts-node esbuild.ts && yarn ts-types",
    "ts-types": "tsc --emitDeclarationOnly --outDir dist",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "lint": "eslint src test --ext .js,.jsx,.ts,.tsx",
    "lintfix": "yarn lint --fix",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "512 KB",
      "ignore": [
        "net", "stream", "http", "https", "url", "tty", "assert", "zlib", "events", "tls", "eval"
      ]
    },
    {
      "path": "dist/index.browser.js",
      "limit": "512 KB"
    }
  ],
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@size-limit/esbuild": "^8.1.0",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/jest": "^29.2.2",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "esbuild": "^0.15.13",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "size-limit": "^8.1.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/address": "^5.7.0",
    "@ethersproject/keccak256": "^5.7.0",
    "@ethersproject/providers": "^5.7.1",
    "@ethersproject/signing-key": "^5.7.0",
    "@ethersproject/wallet": "^5.7.0",
    "axios": "^1.2.0",
    "dvote-solidity": "^1.4.0",
    "iso-language-codes": "^1.1.0",
    "tiny-invariant": "^1.3.1",
    "tweetnacl-sealedbox-js": "^1.2.0",
    "yup": "^0.32.11"
  }
}
